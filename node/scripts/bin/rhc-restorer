#!/bin/bash
# Idle or Restore applications

# Restorer turns an idle application back on making it available to serve
# requests again.

function print_help {
    echo "Usage: $0"
    echo "  -u UUID  (app to restore UUID)"
    exit 1
}


while getopts 'u:d' OPTION
do
case $OPTION in
        u) uuid=$OPTARG
    ;;
        d) set -x
    ;;
        ?) print_help
    ;;
esac
done

if [ -z "$uuid" ] || ! [ -d "/var/lib/stickshift/$uuid" ]
then
    print_help
fi

# Turn user application back on.
# enable
source "/var/lib/stickshift/${uuid}/.env/OPENSHIFT_RUN_DIR"
rm -f "${OPENSHIFT_RUN_DIR}/stop_lock"

source "/var/lib/stickshift/${uuid}/.env/OPENSHIFT_HOMEDIR"

# code copied from node/lib/util_ext
runuser --shell /bin/sh "$uuid" -c "echo started >$OPENSHIFT_HOMEDIR/app/.state"

/sbin/service libra startuser "${uuid}"

HTTP_DIR=`dirname "/etc/httpd/conf.d/stickshift/${uuid}"*/00000_default.conf`

# Enable proxy setup
sed -i "s/#ProxyPass/ProxyPass/g" $HTTP_DIR/*.conf

rm -f $HTTP_DIR/0000000000000_disabled.conf

service httpd graceful
/usr/bin/logger -p local0.notice -t rhc_restorer "Restored: ${uuid}"
