- content_for :title, 'Update your Billing Info'

= semantic_form_for @billing_info, :url => url_for(:action => :edit) do |f|
  = render :partial => 'billing_info/form', :locals => {:billing_info => @billing_info, :show_vat => @show_vat, :user => current_aria_user, :form => f}

  = f.buttons do
    = link_to "Cancel", account_path, :class => 'btn'
    = f.commit_button
    = f.loading
