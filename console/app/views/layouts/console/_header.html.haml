.navbar
  .navbar-inner
    .container

      %a.btn.btn-navbar{'data-target' => '.nav-collapse', 'data-toggle' => 'collapse'}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar

      .brand
        = link_to root_path do
          = product_branding

      .nav-collapse.collapse
        = navigation_tabs do
          = navigation_tab :applications, :action => :index, :name => "Applications"
          = navigation_tab :settings, :action => :show, :name => "Settings"
          = navigation_tab :console_index, :action => :help, :name => "Help"
          - unless Console.config.disable_account
            %li.dropdown.username
              = link_to current_user_id, account_path, :class => "dropdown-toggle", "data-target" => "#", "data-toggle" => "dropdown"
              %ul.dropdown-menu
                %li= link_to "My Account", account_path
                - unless logout_path.nil?
                  %li.divider
                  %li= link_to "Sign Out", logout_path, :class => "sign_out"
